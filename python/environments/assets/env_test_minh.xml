<mujoco model="test_scene">
    <!-- Basic settings -->
    <compiler angle="degree" coordinate="local"/>
    <option timestep="0.001" integrator = "RK4" gravity="0 0 -9.81"/>

    <!-- Rendering options -->
    <visual>
        <map znear="0.01" zfar="50"/>
        <quality shadowsize="2048"/>
        <headlight ambient="0.3 0.3 0.3" diffuse="0.8 0.8 0.8"/>
        <scale
            framelength="0.1"
            framewidth="0.005"
            jointlength="0.1"
            jointwidth="0.005" />
    </visual>

    <!-- Define default colors -->
    <default>
        <default class="color_agent">
            <geom rgba="0.5 0.2 0.2 1"/>
        </default>
        <default class="color_transparent">
            <geom rgba="0 0 0 0"/>
        </default>
        <default class="color_goal">
            <geom rgba="0.2 0.5 0.2 0.5"/>
        </default>
        <default class="color_ground">
            <geom rgba="0.9 0.9 0.9 1"/>
        </default>
        <default class="color_wall">
            <geom rgba="0.5 0.5 0.5 1"/>
        </default>
    </default>

    <default>
        <joint damping="0.5"/>
    </default>

    <!-- World definition -->
    <worldbody>
        <!-- Ground plane -->
        <geom name="ground" type="plane" size="5 5 0.1" friction="1 0 0" class="color_ground"/>

        <!-- Light source -->
        <light name="light" pos="2 2 10" dir="-1 -1 -1" diffuse="1 1 1" specular="0.3 0.3 0.3" castshadow="true"/>

        <!-- Camera -->
        <camera name="camera" pos="0 0 5"/>

        <!-- Test object(s) -->
