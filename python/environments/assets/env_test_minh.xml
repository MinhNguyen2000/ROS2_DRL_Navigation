        <!-- 3rd revision -->
        <body name="agent" pos="0 0 0.01" euler="0 0 45">
            <joint name="agent_x_slide" type="slide" axis="1 0 0"/>
            <joint name="agent_y_slide" type="slide" axis="0 1 0"/>
            <joint name="agent_z_yaw" type="hinge" axis="0 0 1"/>
            <geom type="cylinder" size="0.1 0.01" contype="1" conaffinity="1" mass="0.5" class="color_agent"/>
            <geom type = "box" contype = "0" conaffinity = "0" pos = "0 0 0.015" size = "0.01 0.03 0.005" rgba = "0 0 1 1"/>
        </body>

        <body name="goal" pos="0.5 0.5 0.01">
            <geom type="cylinder" size="0.1 0.01" contype="0" conaffinity="0" class="color_goal"/>
        </body>


        <!-- Boundaries -->
        <body name="wall_1" pos="0 5.05 0.05">
            <geom type="box" size="5.1 0.05 0.05" class="color_wall"/>
        </body>

        <body name="wall_3" pos="0 -5.05 0.05">
            <geom type="box" size="5.1 0.05 0.05" class="color_wall"/>
        </body>

        <body name="wall_2" pos="5.05 0 0.05">
            <geom type="box" size="0.05 5 0.05" class="color_wall"/>
        </body>

        <body name="wall_4" pos="-5.05 0 0.05">
            <geom type="box" size="0.05 5 0.05" class="color_wall"/>
        </body>

    </worldbody>

